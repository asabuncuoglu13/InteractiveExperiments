<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardTextName" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CardTextDetail" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:typeface">monospace</item>
    </style>

</resources>
